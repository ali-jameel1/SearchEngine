html
  head
    title Fruit Search Results

  body
    h1 Fruits Search Results

    form(action="/fruits", method="get")
      label(for="q") Search Fruits:
      input(type="text", name="q", id="q")
      label(for="boost") Boost with PageRank:
      input(type="checkbox", name="boost", id="boost", value="true")
      label(for="limit") Number of Results (1-50):
      input(type="number", name="limit", id="limit", min="1", max="50", value="10")
      button(type="submit") Search

    ul
      each result in finalSearch
        li
          strong URL:
          a(href=result.url)= result.url
          br
          strong Title:
          span= result.title
          br
          strong Score:
          span= result.score
          br
          strong PageRank:
          span= result.pr
          br
          strong View Data:
          a(href="/page/" + result.id) View Details
          br
      else
        li No results found.
